<Page x:Class="TestAssignment.CurrencyDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestAssignment"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CurrencyDetailPage">

    <Grid>
      <TextBlock x:Name="CryptoInfoText" FontSize="18" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"/>
  
        <!-- Детальна інформація про криптовалюту -->
        <StackPanel  x:Name="stackDetail" Margin="20,50,20,20">
            <TextBlock Text="Name:" FontWeight="Bold"/>
            <TextBlock x:Name="NameText"/>

            <TextBlock Text="Price (USD):" FontWeight="Bold"/>
            <TextBlock x:Name="PriceText"/>

            <TextBlock Text="24h Change (%)" FontWeight="Bold"/>
            <TextBlock x:Name="ChangeText"/>

            <TextBlock Text="Volume:" FontWeight="Bold"/>
            <TextBlock x:Name="VolumeText"/>

           
        </StackPanel>

       
    </Grid>
</Page>
