<Page x:Class="TestAssignment.CalculatorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestAssignment"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CalculatorPage">

    <Grid Margin="20">

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <ComboBox x:Name="CryptoComboBox1" Width="200" Margin="0,10" SelectionChanged="CryptoComboBox_SelectionChanged">
            </ComboBox>
            <TextBox x:Name="AmountTextBox1" Width="200" Margin="0,10"/>
            <ComboBox x:Name="CryptoComboBox2" Width="200" Margin="0,10" SelectionChanged="CryptoComboBox_SelectionChanged">
            </ComboBox> 
            <Button Content="Calculate" Width="200" Margin="0,10" Click="CalculateButton_Click"/>
            <TextBlock x:Name="ResultText" FontSize="16" FontWeight="Bold" TextAlignment="Center" Margin="0,20"/>
        </StackPanel>
   
    </Grid>
</Page>
